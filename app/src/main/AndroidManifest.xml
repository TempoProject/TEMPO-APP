    <!-- TODO in production, set usesCleartextTraffic to false -->
    <application
        android:name=".TempoApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TempoApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <!--<service
            android:name=".utils.StepsService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <receiver
            android:name=".utils.StepsReceiver"
            android:enabled="true" />-->
        <service
            android:name=".utils.MovesenseService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="connectedDevice" />

        <!--<receiver
            android:name=".utils.AlarmReceiver"
            android:enabled="true" />-->

        <receiver
            android:name=".utils.ProphylaxisAlarmReceiver"
            android:enabled="true" />

        <receiver
            android:name=".utils.RebootBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".utils.ProphylaxisResponseReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tempo.ACTION_YES_RESPONSE" />
                <action android:name="com.tempo.ACTION_NO_RESPONSE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TempoApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW_PERMISSION_USAGE" />
                <category android:name="android.intent.category.HEALTH_PERMISSIONS" />
            </intent-filter>
        </activity>
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>

    <!-- declare Health Connect visibility -->
    <queries>
        <package android:name="com.google.android.apps.healthdata" />
    </queries>

</manifest>